<h2 class="text-center">What's your top goal?</h2>
<p class="text-center">This will help us personalize your experience.</p>

<div class="progress">
  <div class="progress-bar" role="progressbar" style="width: 33%;" aria-valuenow="33" aria-valuemin="0" aria-valuemax="100"></div>
</div>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <%= simple_form_for :questionnaire, url: onboarding_step1_path, method: :post, html: { class: 'onboarding-form' } do |f| %>
        <div class="list-group">
          <% @questions.each do |question| %>
            <label class="list-group-item list-group-item-action d-flex align-items-center">
              <%= f.radio_button :goal, question[:content], class: 'form-check-input' %>
              <span class="iconify" data-icon="<%= question[:icon] %>" data-inline="false" style="font-size: 24px; margin-right: 10px;"></span>
              <span><%= question[:content] %></span>
            </label>
          <% end %>
        </div>
        <div class="form-group text-center mt-4">
          <%= f.submit "Continue", class: "btn btn-primary btn-lg" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
