<div class="container">
    <div class="my-5">
      <h2>Continue Learning</h2>
    </div>

    <div class="d-flex flex-row align-items-center justify-content-between my-5" >
        <div class="d-flex align-items-center">
            <div class="custom-image">
              <%= image_tag 'collage-1.jpg', alt: '', class: "custom-image" %>
            </div >

            <div class="mx-3">
              <h2> <%= current_user.active_course.title %></h2>
               <p> <%= current_user.active_course.description %></p>
            </div>
        </div>


        <div>
           <button class="btn-custom-secondary">Continue</button>
        </div>

  </div>

<hr>


<div class="my-5">
  <h2>Browse All Courses</h2>
</div>

<div class="row">
  <% @courses.each do |course| %>
    <div class="col-md-4 mb-4">
      <div class="card-course  h-100">
          <%= link_to course_path(course.title), class: "d-flex flex-column text-decoration-none text-dark" do %>
          <div style="margin-bottom: 2rem;">
            <%= image_tag 'collage-2.jpg', alt: '', class: "custom-image" %>
          </div>
          <div>
            <h3><%= course.title %></h3>
            <p><%= course.description %></p>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

</div>

</div>
