<div class="container">

<% if user_signed_in? %>
    <div class="my-5">
        <h2>Recommended for you</h2>
    </div>

    <div class="d-flex flex-row align-items-center justify-content-between my-5">
        <div class="d-flex align-items-center">
            <div class="custom-image">
                <%= image_tag "basics.jpg", alt: '', class: "custom-image" %>
            </div>

            <div class="mx-3">

                <h2><%= "Future course recommendation" %></h2>
                <p><%= "This will be a recommended course if have time to do this" %></p>

            </div>
        </div>

        <div>
            <button class="btn-custom-secondary">
                <%= link_to "View Course", course_path("Personal Finance 101"), class: "btn-link" %>
            </button>
        </div>
    </div>

    <hr>
  <% end %>
    <div class="my-5">
        <h2>Browse All Courses</h2>
    </div>

    <div class="row">
        <% @courses.each do |course| %>
            <div class="col-md-4 mb-4">
                <div class="card-course h-100">
                    <%= link_to course_path(course.title), class: "d-flex flex-column text-decoration-none text-dark" do %>
                        <div>
                            <%= image_tag course.image_name, alt: '', class: "custom-image" %>
                        </div>
                        <div>
                            <h3><%= course.title %></h3>
                            <p><%= course.description %></p>
                        </div>
                    <% end %>
                </div>
            </div>
        <% end %>
    </div>
</div>
