<h1>Store</h1>
<p>Welcome to the Fingo Store!</p>




<div class="container">
    <div class="row">
      <% @items.each_slice(2) do |row| %>
        <% row.each do |item| %>
          <div class="col-md-6" data-controller="purchase">
            <div class="card mb-4">
              <div class="card-body">
                <h5 class="card-title" data-purchase-target="name"><%= item.name %></h5>
                <p class="card-text"><%= item.description %></p>
                <p class="card-text" data-purchase-target="price">Price: <%= item.price %> ðŸª™</p>
                <%= button_to "Purchase", item_user_items_path(item), method: :post, form: {data: { purchase_target: "form" }}, data: { action: "click->purchase#purchase" }, class: "btn btn-primary"  %>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>

<div id="myModal" class="modal">

  <!-- Modal content -->
  <div class="modal-content">
    <span class="close">&times;</span>
    <p>Some text in the Modal..</p>
  </div>

</div>
